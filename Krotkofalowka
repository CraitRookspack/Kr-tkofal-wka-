addCommandHandler("Frakcja",
function(plr, cmd, ...)
local msg = table.concat({...}," ")
if not msg then return end
   for _,v in ipairs(getElementsByType("player")) do
      local accName = getAccountName(getPlayerAccount(v)) 
      if isObjectInACLGroup ("user."..accName, aclGetGroup ( "Policja" ) ) then
         outputChatBox("[Policja] "..getPlayerName(plr)..": "..msg, v)
      end
   end
end
end
)

addEventHandler("onPlayerJoin", root,
function()
    bindKey(source, "y", "down", "chatbox", "Frakcja")
end)
